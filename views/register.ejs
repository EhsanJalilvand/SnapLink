<%- include('./partials/header.ejs') %>

<main class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
                <div class="card-header bg-primary text-white py-3">
                    <h3 class="text-center mb-0"><i class="fas fa-user-plus me-2"></i><%= title %></h3>
                </div>
                <div class="card-body p-4">
                    <%- include('./partials/formMessage.ejs') %>
                    
                    <form action="/register" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="displayname" class="form-label">
                                <i class="fas fa-user me-2"></i><%= __('register_displayname') %>
                            </label>
                            <input type="text" id="displayname" name="displayname" class="form-control py-2" 
                                   required value="<%= formData.displayname %>">
                            <div class="invalid-feedback"><%= __('please_enter_displayname') %></div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">
                                <i class="fas fa-envelope me-2"></i><%= __('register_email') %>
                            </label>
                            <input type="email" id="email" name="email" class="form-control py-2" 
                                   required value="<%= formData.email %>">
                            <div class="invalid-feedback"><%= __('please_enter_valid_email') %></div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="password" class="form-label">
                                <i class="fas fa-lock me-2"></i><%= __('register_password') %>
                            </label>
                            <input type="password" id="password" name="password" class="form-control py-2" required
                                   minlength="6" data-toggle="password">
                            <div class="invalid-feedback"><%= __('password_min_length') %></div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="confirmPassword" class="form-label">
                                <i class="fas fa-lock me-2"></i><%= __('register_confirmPassword') %>
                            </label>
                            <input type="password" id="confirmPassword" name="confirmPassword" 
                                   class="form-control py-2" required>
                            <div class="invalid-feedback"><%= __('passwords_must_match') %></div>
                        </div>
                        
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary py-2">
                                <i class="fas fa-user-plus me-2"></i><%= __('register_Register') %>
                            </button>
                        </div>
                        
                        <div class="text-center">
                            <p class="mb-0"><%= __('already_have_account') %>
                                <a href="/login" class="text-primary text-decoration-none">
                                    <%= __('login_here') %>
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('./partials/footer.ejs') %>

