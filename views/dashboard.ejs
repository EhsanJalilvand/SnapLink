<%- include('./partials/header.ejs') %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment-jalaali@0.9.2/build/moment-jalaali.min.js"></script>

    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <nav id="sidebar" class="col-12 col-md-3 col-lg-2 bg-dark sidebar p-3 d-md-block d-none">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active text-white section-link" href="#" data-section="links-section">
                                <i class="bi bi-link-45deg me-2"></i> Links
                            </a>
                        </li>
                        <li class="border-top my-2"></li>
                        <li class="nav-item">
                            <a class="nav-link text-white section-link" href="#" data-section="analytics-section">
                                <i class="bi bi-bar-chart-line me-2"></i> Charts
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Mobile Sidebar Toggle Button -->
            <div class="d-md-none d-flex justify-content-between align-items-center bg-dark text-white p-2">
                <span class="fw-bold">Dashboard</span>
                <button class="btn btn-sm btn-light" onclick="toggleMobileSidebar()">â˜°</button>
            </div>
            <nav id="mobileSidebar" class="bg-dark text-white p-3 d-md-none d-none">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white section-link" href="#" data-section="links-section">
                            <i class="bi bi-link-45deg me-2"></i> Links
                        </a>
                    </li>
                    <li class="border-top my-2"></li>
                    <li class="nav-item">
                        <a class="nav-link text-white section-link" href="#" data-section="analytics-section">
                            <i class="bi bi-bar-chart-line me-2"></i> Charts
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="col-12 col-md-9 col-lg-10 px-3 py-4">
                <section id="links-section" class="content-section">

                    <%- include('./partials/shortlink.ejs') %>

                        <div dir="ltr" class="card mt-3">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table  class="table table-striped table-hover" id="links-table">
                                        <thead>
                                            <tr>
                                                <th>Title</th>
                                                <th>Original Link</th>
                                                <th>Create At</th>
                                                <th>Expire At</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>

                                <nav aria-label="Page navigation">
                                    <ul class="pagination justify-content-center mt-3" id="pagination">
                                    </ul>
                                </nav>
                            </div>
                        </div>
                </section>

                <section id="analytics-section" class="content-section py-4 text-center  justify-content-center"
                    style="min-height: 350px; display: none;">
                    <div>
                        <img src="/images/coming_soon.png" alt="Coming Soon" style="max-width: 250px;" class="mb-4">
                        <h2 class="h4 mb-3">
                            <%= __('coming_soon_title') %>
                        </h2>
                        <p class="text-muted">
                            <%= __('coming_soon_description') %>
                        </p>
                    </div>
                </section>

            </main>
        </div>
    </div>

    <style>
        .sidebar {
            min-height: 100vh;
            transition: all 0.3s ease-in-out;
        }

        @media (max-width: 767.98px) {
            #mobileSidebar {
                transition: all 0.3s ease-in-out;
            }
        }
    </style>

<script src="../js/dashboard.js"></script>