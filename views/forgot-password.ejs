<%- include('./partials/header.ejs') %>

<main class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
        <div class="card-header bg-primary text-white py-3">
          <h3 class="text-center mb-0"><%= title %></h3>
        </div>
        <div class="card-body p-4">
          <%- include('./partials/formMessage.ejs') %>

          <form action="/forgot-password" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="email" class="form-label">
                <i class="fas fa-envelope me-2"></i><%= __('login_email') %>
              </label>
              <input type="email" id="email" name="email" class="form-control py-2" required>
              <div class="invalid-feedback"><%= __('please_enter_valid_email') %></div>
            </div>

            <div class="d-grid mb-3">
              <button type="submit" class="btn btn-primary py-2">
                <i class="fas fa-paper-plane me-2"></i><%= __('forgot_send_code') %>
              </button>
            </div>
          </form>

          <div class="text-center mt-3">
            <a href="/login" class="text-decoration-none text-primary">
              <i class="fas fa-arrow-left me-1"></i><%= __('back_to_login') %>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('./partials/footer.ejs') %>
