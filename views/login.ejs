<%- include('./partials/header.ejs') %>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="width: 400px;">
        <h3 class="text-center"><%= title %></h3>
 <%- include('./partials/formMessage.ejs') %>
        <form action="/login" method="POST">
            <div class="mb-3">
                <label class="form-label"><%= __('login_email') %>:</label>
                <input type="email" name="email" class="form-control" required  value="<%= formData.email %>">
            </div>
            <div class="mb-3">
                <label class="form-label"><%= __('login_password') %>:</label>
                <input type="password" name="password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary w-100"><%= __('login_login') %></button>
        </form>
        <div class="text-center mt-3">
            <a href="/auth/google" class="btn btn-danger w-100"><%= __('login_loginwithGoogle') %></a>
        </div>
        <div class="text-center mt-2">
            <a href="/register"><%= __('login_dontHaveAnAccount') %></a>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
