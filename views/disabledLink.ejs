<%- include('./partials/header.ejs') %>

<style>
    body {
        background-color: #f8f9fa;
    }
    .disabled-container {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .disabled-card {
        max-width: 500px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border: none;
    }
    .disabled-icon {
        font-size: 5rem;
        color: #ffc107;
        margin-bottom: 20px;
    }
    .btn-home {
        background-color: #0d6efd;
        color: white;
        padding: 10px 25px;
        border-radius: 50px;
    }
</style>

<div class="container disabled-container">
    <div class="card disabled-card text-center p-4">
        <div class="card-body">
            <div class="disabled-icon">
                <i class="bi bi-slash-circle"></i>
            </div>
            <h2 class="card-title mb-3"><%= __('Link Disabled') %></h2>
            <p class="card-text mb-4">
                <%= __('This link has been disabled and cannot be accessed.') %>
            </p>
            <p class="text-muted small mb-4">
                <%= __('If you believe this is an error, please contact support.') %>
            </p>
            <a href="/" class="btn btn-home">
                <i class="bi bi-house-door"></i> <%= __('Go to Homepage') %>
            </a>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
