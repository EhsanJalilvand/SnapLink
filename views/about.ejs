<%- include('./partials/header.ejs') %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<section class="about-section py-5">
    <div class="container">
      <div class="text-center mb-5">
        <div class="icon-wrapper">
          <i class="bi bi-link-45deg"></i>
        </div>
        <h1 class="display-5 fw-bold"><%= __('about_title') %></h1>
        <p class="lead"><%= __('about_subtitle') %></p>
      </div>
  
      <div class="row g-4">
        <div class="col-md-6">
          <div class="about-card">
            <div class="icon-box bg-primary">
              <i class="bi bi-currency-dollar"></i>
            </div>
            <h3><%= __('about_feature1_title') %></h3>
            <p><%= __('about_feature1_text') %></p>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="about-card">
            <div class="icon-box bg-success">
              <i class="bi bi-unlock"></i>
            </div>
            <h3><%= __('about_feature2_title') %></h3>
            <p><%= __('about_feature2_text') %></p>
          </div>
        </div>
  
        <div class="col-md-6">
          <div class="about-card">
            <div class="icon-box bg-warning">
              <i class="bi bi-clock"></i>
            </div>
            <h3><%= __('about_feature3_title') %></h3>
            <p><%= __('about_feature3_text') %></p>
          </div>
        </div>
  
        <div class="col-md-6">
          <div class="about-card">
            <div class="icon-box bg-info">
              <i class="bi bi-graph-up"></i>
            </div>
            <h3><%= __('about_feature4_title') %></h3>
            <p><%= __('about_feature4_text') %></p>
          </div>
        </div>
      </div>
  
      <div class="tech-stack mt-5">
        <h3 class="text-center mb-4"><%= __('about_tech_title') %></h3>
        <div class="d-flex justify-content-center flex-wrap">
          <span class="tech-badge">Node.js</span>
          <span class="tech-badge">Express</span>
          <span class="tech-badge">MongoDB</span>
          <span class="tech-badge">Bootstrap</span>
        </div>
      </div>
  
      <div class="text-center mt-5">
        <a href="/" class="btn btn-primary btn-lg me-3">
          <i class="bi bi-play-circle me-2"></i>
          <%= __('about_cta_button') %>
        </a>
        <div class="social-links mt-4">
          <a href="https://github.com/EhsanJalilvand/SnapLink" class="btn btn-outline-dark me-2">
            <i class="bi bi-github me-1"></i> GitHub
          </a>
          <a href="https://www.linkedin.com/in/ehsan-jalilvand/" class="btn btn-outline-primary">
            <i class="bi bi-linkedin me-1"></i> LinkedIn
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <style>
    .about-section {
      background-color: #f8f9fa;
    }
    
    .icon-wrapper {
      width: 80px;
      height: 80px;
      margin: 0 auto 20px;
      background-color: rgba(13, 110, 253, 0.1);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .icon-wrapper i {
      font-size: 2.5rem;
      color: #0d6efd;
    }
    
    .about-card {
      background: white;
      border-radius: 10px;
      padding: 25px;
      height: 100%;
      box-shadow: 0 5px 15px rgba(0,0,0,0.05);
      transition: transform 0.3s;
    }
    
    .about-card:hover {
      transform: translateY(-5px);
    }
    
    .icon-box {
      width: 50px;
      height: 50px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 15px;
      color: white;
    }
    
    .icon-box i {
      font-size: 1.5rem;
    }
    
    .tech-badge {
      background: #e9ecef;
      padding: 8px 15px;
      border-radius: 20px;
      margin: 5px;
      font-weight: 500;
    }
  </style>
  
  <%- include('./partials/footer.ejs') %>